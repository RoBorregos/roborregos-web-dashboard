header
  .title-row.row.align-items-center
    .col-12
      h1
        = fa_icon 'microchip fw', class: 'mr-2'
        = @component.name

  .nav-row.row.align-items-end.pb-2
    .col-3
      = link_to components_path, class: 'btn btn-info' do
        = fa_icon 'angle-left', class: 'mr-2'
        = t('.return')
    .col-6
      = link_to edit_component_path(@component.id), class: 'btn btn-warning' do
        = fa_icon 'edit', class: 'mr-2'
        = t('.edit')
    .col-3
      = link_to component_path(@component.id), method: :delete, data: { confirm: t('.delete_confirmation') }, class: 'btn btn-danger' do
        = fa_icon 'trash-o', class: 'mr-2'
        = t('.delete')

#component_info_section.content-section
  .row.justify-content-center
    .col-md-10
      #general_info.card
        .card-header
          = fa_icon 'info fw', class: 'mr-2'
          = t('.section_title')
        ul.list-group.list-group-flush
          li.list-group-item
            .row
              .col-4.info-title
                = t('.label_img_path')
              .col-8
                = @component.img_path
          li.list-group-item
            .row
              .col-4.info-title
                = t('.label_stock')
              .col-8
                = @component.stock
          li.list-group-item
            .row
              .col-4.info-title
                = t('.label_category')
              .col-8
                = @component.component_category.name
